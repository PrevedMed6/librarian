<section class="work-with-book">
  <h1>Работа с книгой</h1>
  <form action="postbook" method="POST">
    <input type="hidden" name="id" value="0" />
    <div class="form-group">
      <label for="title">Название:</label>
      <input class="form-control" name="title" required/>
    </div>
    <div class="form-group">
      <label for="author">Автор:</label>
      <input class="form-control" name="author" required />
    </div>
    <div class="form-group">
      <label for="genre">Жанр:</label>
      <select class="form-control" name="genre" required >
        <option>Фантастика</option>
        <option>Реализм</option>
        <option>Поэзия</option>
      </select>
    </div>
    <div class="form-group">
      <label for="year">Год</label>
      <input type="number" min="1000" max="2022" class="form-control" name="year" required />
    </div>
    <div class="form-group">
      <label for="total">Всего</label>
      <input type="number" min="1" max="100" class="form-control" name="total" required />
    </div>
    <div class="panel-body">
      <button type="submit" class="btn btn-primary">Сохранить</button>
      <a  href="/" class="btn btn-outline-primary">Отменить</a>
    </div>
</section>
