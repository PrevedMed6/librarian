<section class="work-with-book">
  <h1>Работа с книгой</h1>
  <form action="/postbook" method="POST">
    <input type="hidden" name="_id" value="{{book._id}}" />
    <div class="form-group">
      <label for="title">Название:</label>
      <input class="form-control" name="title" value="{{book.title}}" required/>
    </div>
    <div class="form-group">
      <label for="author">Автор:</label>
      <input class="form-control" name="author" value="{{book.author}}" required />
    </div>
    <div class="form-group">
      <label for="genre">Жанр:</label>
      <select class="form-control" name="genre" required >
        {{#select book.genre}}
        <option value="Фантастика">Фантастика</option>
        <option value="Реализм">Реализм</option>
        <option value="Поэзия">Поэзия</option>
        {{/select}}
      </select>
    </div>
    <div class="form-group">
      <label for="year">Год</label>
      <input type="number" min="1000" max="2022" class="form-control" value="{{book.year}}" name="year" required />
    </div>
    <div class="form-group">
      <label for="total">Всего</label>
      <input type="number" min="1" max="100" class="form-control" value="{{book.total}}" name="total" required />
    </div>
    <div class="panel-body">
      <button type="submit" class="btn btn-primary">Сохранить</button>
      <a  href="/" class="btn btn-outline-primary">Отменить</a>
    </div>
</section>
